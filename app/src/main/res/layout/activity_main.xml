<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/wallet"
        android:layout_width="113dp"
        android:layout_height="37dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#FFFFFF"
        app:cardCornerRadius="50dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/balanceText"
            android:layout_width="67dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="5dp"
            android:text="0.00€"
            android:textAlignment="center"
            android:textColor="#959595"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/addFunds"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:background="#FFFFFF"
            android:backgroundTint="#4CAF50"
            app:cardCornerRadius="50dp"
            app:cardElevation="10dp">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="8dp"
                app:srcCompat="@drawable/daco_4535933" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="User: "
        android:textColor="#424242"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="315dp"
        android:layout_marginTop="36dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        tools:ignore="SpeakableTextPresentCheck"
        tools:layout_editor_absoluteX="0dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/scooterCard"
                android:layout_width="186dp"
                android:layout_height="285dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.4"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/upperImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/trotinete" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="245dp"
                    android:alpha="0.4"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/i1" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="161dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="248dp"
                    android:text="TROTINETE"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bicycleCard"
                android:layout_width="186dp"
                android:layout_height="285dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/lowerImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.7"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/bike" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="245dp"
                    android:alpha="0.4"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/i1" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="248dp"
                    android:text="BICICLETA"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/bikeCard"
                android:layout_width="186dp"
                android:layout_height="285dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="187dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="245dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/i1" />

                <ImageView
                    android:id="@+id/caliImage"
                    android:layout_width="match_parent"
                    android:layout_height="284dp"
                    android:alpha="0.7"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/mota" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="248dp"
                    android:text="MOTA"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:text="12 MOTAS"
                    android:textColor="#FFFFFF" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/carCard"
                android:layout_width="186dp"
                android:layout_height="285dp"
                android:layout_marginLeft="10dp"
                app:cardElevation="10dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="183dp"
                    android:layout_height="43dp"
                    android:layout_marginTop="245dp"
                    android:alpha="2"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/i1" />

                <ImageView
                    android:id="@+id/cardioImage"
                    android:layout_width="185dp"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/car" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="110dp"
                    android:layout_height="35dp"
                    android:layout_marginLeft="5dp"
                    android:text="6 CARROS"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="162dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="242dp"
                    android:text="CARRO"
                    android:textColor="#FFFFFF"
                    android:textSize="17sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/addFundsMenu"
        android:layout_width="110dp"
        android:layout_height="88dp"
        android:backgroundTint="#FFFFFF"
        android:visibility="invisible"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/addFundsButton"
            android:layout_width="101dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="40dp"
            android:background="#8BC34A"
            android:backgroundTint="#8BC34A"
            app:cardCornerRadius="30dp"
            app:cardElevation="3dp">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="CARREGAR"
                android:textAlignment="center"
                android:textColor="#FDFDFD"
                android:textSize="12sp" />
        </androidx.cardview.widget.CardView>

        <EditText
            android:id="@+id/fundsInput"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:backgroundTint="#8BC34A"
            android:ems="10"
            android:hint="XX"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="#B3B3B3"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="25dp"
            android:layout_height="16dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="13dp"
            android:alpha="0.3"
            app:srcCompat="@drawable/eurosign" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tableCard"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="28dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <ImageView
            android:id="@+id/imageBook2"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/book" />

        <TextView
            android:id="@+id/tableText"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#8BC2E1"
            android:text="Tabela"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/historyCard"
        android:layout_width="160dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="44dp"
        app:cardBackgroundColor="#4CAF50"
        app:cardCornerRadius="3dp"
        app:cardElevation="10dp"
        app:layout_constraintEnd_toStartOf="@+id/tableCard"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <ImageView
            android:id="@+id/imageBook1"
            android:layout_width="37dp"
            android:layout_height="29dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/book" />

        <TextView
            android:id="@+id/historyText"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="6dp"
            android:backgroundTint="#8BC2E1"
            android:text="Histórico"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>